<div class="hello">
    {{#each allPosts}}
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <a href="{{postLink}}" target="_blank">
                <div class="snpt" style="box-shadow: 2px 2px 2px grey; border-radius: 5px;">
                    <img src="{{picture}}" style="width: 200px;" alt="{{topic}}">
                    <h4><a href="{{siteLink}}">{{website}}</a></h4>
                    <p>{{topic}}</p>
                    <p>{{date}}</p>
                </div>
            </a>
        </div>
    {{/each}}
</div>

